<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="text-center mb-4">Edit User</h1>
          
          <%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
            <%= f.input :first_name, label: 'First Name', required: true, input_html: { class: 'form-control' } %>
            <%= f.input :last_name, label: 'Last Name', required: true, input_html: { class: 'form-control' } %>
            <%= f.input :email, label: 'Email', required: true, input_html: { class: 'form-control' } %>
            <%= f.input :phone_number, label: 'Phone Number', input_html: { class: 'form-control' } %>
            <%= f.input :roles, collection: Role.all.collect { |role| [role.name, role.id] }, label: 'Roles', as: :select, input_html: { class: 'form-control' } %>
            
            <div class="text-center">
              <%= f.button :submit, 'Save Changes', class: 'btn btn-primary mt-3' %>
              <%= link_to 'Back', users_path, class: 'btn btn-secondary mt-3' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
