<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center"><%= t('login') %></h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          label: t('email'),
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control", placeholder: t('email') } %>
              <%= f.input :password,
                          label: t('password'),
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control", placeholder: t('password') } %>
              <%= f.input :remember_me, as: :boolean, label: t('remember_me') if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, t('login'), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
