<div class="container">
 <div class="row justify-content-center">
   <div class="col-md-6">
     <div class="card" style="margin-top: 20px;">
       <div class="card-body">
         <h2 class="card-title text-center"><%= t('login') %></h2>
         <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
           <div class="form-inputs" data-controller="password">
             <%= f.input :email,
                         label: t('email'),
                         required: false,
                         autofocus: true,
                         input_html: { autocomplete: "email", class: "form-control", placeholder: t('email') } %>
             <%= f.input :password,
                         label: t('password'),
                         required: false,
                         input_html: { autocomplete: "current-password", class: "form-control", placeholder: t('password'), 'data-password-target': "password" } %>


             <div class="d-flex justify-content-between align-items-center">
               <% if devise_mapping.rememberable? %>
                 <div class="form-check">
                   <%= f.check_box :remember_me, class: "form-check-input" %>
                   <%= f.label :remember_me, t('remember_me'), class: "form-check-label" %>
                 </div>
               <% end %>
               <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="show-password" data-action="click->password#togglePassword">   
                  <label class="form-check-label" for="show-password"><%= t('show_password') %></label>
               </div>
             </div>
           </div>


           <div class="form-actions text-center">
             <%= f.button :submit, t('login'), class: "btn btn-primary" %>
           </div>
         <% end %>
       </div>
     </div>
     <%= render "users/shared/links" %>
   </div>
 </div>
</div>

