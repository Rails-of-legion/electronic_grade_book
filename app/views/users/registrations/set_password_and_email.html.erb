<h2>Установите пароль и адрес электронной почты</h2>

<%= simple_form_for(resource, as: resource_name, url: users_set_password_and_email_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :id, value: @user.id %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, "Завершить регистрацию" %>
<% end %> 
