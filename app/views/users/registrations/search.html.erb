<h2>Найти пользователя</h2>

<%= simple_form_for :user, url: users_find_user_path, method: :post do |f| %>

<div class="form-inputs">
  <%= f.input :first_name %>
  <%= f.input :middle_name %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth, as: :date %>
  <%= f.input :phone_number %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Find" %>
</div>
<% end %>


<%= render "users/shared/links" %>
