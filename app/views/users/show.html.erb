<div class="container">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1> <div class="row">
    <div class="col-sm-9">
      <ul class="list-group">
        <li class="list-group-item"><strong>Email:</strong> <%= @user.email %></li>
        <li class="list-group-item"><strong>Status:</strong> <%= @user.status %></li>
        <li class="list-group-item"><strong>Date of Birth:</strong> <%= @user.date_of_birth %></li>
        <li class="list-group-item"><strong>Roles:</strong>
          <% @user.roles.each do |role| %>
            <%= role.name %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>