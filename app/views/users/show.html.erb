<div class="container">  
  <h1 class="display-4 text-center mb-4"><%= t('personal_profile') %></h1>
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @user.name %></h2>   
      <div class="row">    
        <div class="col-sm-9">      
          <ul class="list-group list-group-flush">        
            <li class="list-group-item"><strong><%= t('email') %> :</strong> <%= @user.email %></li>                
            <% if @user.has_role?(:student) && @user.record_book.present? %>        
              <li class="list-group-item"><strong><%= t('specialization') %> :</strong> <%= @user.record_book.specialization.name %></li>
              <li class="list-group-item"><strong><%= t('group') %> :</strong> <%= @user.record_book.group.name %></li>
              <li class="list-group-item"><%= link_to t('record_book'), @user.record_book %></li>  
            <% end %>        
            <li class="list-group-item"><strong><%= t('status') %> :</strong> <%= @user.status %></li>
            <li class="list-group-item"><strong><%= t('date_of_birth') %> :</strong> <%= @user.date_of_birth %></li>      
          </ul>    
        </div>  
      </div>
      <div>
      </div>  
      <% if current_user == @user %>
      <div class="mt-3">
        <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#notifications">
            <%= t('show_notifications') %>
        </button>
        <%= link_to t('change_password'), edit_password_path(@user), class: "btn btn-primary" %>
        <%= link_to t('change_email'), edit_email_path(@user), class: "btn btn-secondary" %>
      </div>
      <div class="collapse" id="notifications">
        <div class="card card-body">
          <% if @notificationsUser.any? { |notification| notification.status == false } %>
            <ul class="list-group">
              <% @notificationsUser.each do |notification| %>
                <% if notification.status == false %>
                  <li class="list-group-item">
                    <%= Notification.find(notification.notification_id).message %>
                    <%= button_to 'Learn', mark_as_read_notification_path(notification), method: :patch, class: "btn btn-link" %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          <% else %>
          <p><%= t('you_dont_have_any_new_notifications') %></p>
          <% end %>
    
          <button class="btn btn-link" data-bs-toggle="collapse" data-bs-target="#readNotifications">
              <%= t('read_notifications') %>
          </button>
          <div class="collapse" id="readNotifications">
            <ul class="list-group">
              <% @notificationsUser.each do |notification| %>
                <% if notification.status == true %>
                  <li class="list-group-item">
                    <%= Notification.find(notification.notification_id).message %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
</div>
