<h2><%= t('users.change_your_password') %></h2>
<%= simple_form_for :user, url: update_password_path  do |f| %>

  <div class="form-inputs">
    <%= f.input :password,
                label: t('users.new_password'),
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} #{t('characters_minimum')}" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: t('users.confirm_your_new_password'),
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('users.change_my_password') %>
    <%= link_to t('users.back'), user_path %>
  </div>
<% end %>
