<h1>List of Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Student</th>
      <th>Subject</th>
      <th>Attendance Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.date %></td>
        <td><%= attendance.record_book.name %></td>  <td><%= attendance.subject.name %></td>  <td><%= attendance.attendance_status %></td>
        <td>
          <%= link_to "Show", attendance_path(attendance), class: "btn btn-primary" %>
          <%= link_to "Edit", edit_attendance_path(attendance), class: "btn btn-warning" %>
          <%= button_to "Destroy", attendance_path(attendance), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
