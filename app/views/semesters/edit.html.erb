<%= simple_form_for @semester, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, label: 'Name', required: true, input_html: { class: 'form-control' } %>
  <%= f.input :start_date, as: :date, label: 'Start Date', required: true, input_html: { class: 'form-control' } %>
  <%= f.input :end_date, as: :date, label: 'End Date', required: true, input_html: { class: 'form-control' } %>
  <%= f.button :submit, 'Update Semester', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', semesters_path, class: 'btn btn-secondary' %>
