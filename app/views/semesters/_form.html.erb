<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <%= form_with(model: @semester, local: true) do |f| %>
        <%= render 'shared/errors', object: @semester %>

        <div class="form-group row mb-3">
          <div class="col-sm-3 text-right">
            <%= f.label :name, class: "col-form-label" do %>
              <div>Name:</div>
            <% end %>
          </div>

          <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <div class="col-sm-3 text-right">
            <%= f.label :start_date, class: "col-form-label" do %>
              <div>Start Date:</div>
            <% end %>
          </div>
          <div class="col-sm-9">
            <%= f.date_field :start_date, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <div class="col-sm-3 text-right">
            <%= f.label :end_date, class: "col-form-label" do %>
              <div>End Date:</div>
            <% end %>
          </div>
          <div class="col-sm-9">
            <%= f.date_field :end_date, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3 d-flex justify-content-end">
            <%= f.submit (@semester.new_record? ? "Create Semester" : "Edit Semester"), class: "btn btn-primary mr-2" %>
            <%= link_to "Back", semesters_path, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>