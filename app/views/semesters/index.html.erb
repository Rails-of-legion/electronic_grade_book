<div class="container">
  <h1 class="page-header mb-4"><%= t('semesters') %></h1>

  <div class="semesters-index">
    <% if @semesters.present? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t('name') %></th>
            <th><%= t('start_date') %></th>
            <th><%= t('end_date') %></th>
            <th><%= t('actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% @semesters.each do |semester| %>
            <tr>
              <td><%= semester.name %></td>
              <td><%= semester.start_date.strftime("%d.%m.%Y") if semester.start_date.present? %></td>
              <td><%= semester.end_date.strftime("%d.%m.%Y") if semester.end_date.present? %></td>
              <td>
                <div class="btn-group" role="group">
                  <% if semester.persisted? %>
                    <%= link_to t('show'), semester, class: 'btn btn-outline-primary btn-sm' %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p><%= t('no_semesters_found') %></p>
    <% end %>
  </div>
</div>
