<!-- app/views/individual_reports/new.html.erb -->
<h1 class="text-center mb-4">Создать отчет</h1>

<%= form_tag generate_report_individual_reports_path(format: :pdf), method: :post, class: "container" do %>
  <div class="form-group row mb-3">
    <%= label_tag :intermediate_attestation_id, "Промежуточная аттестация", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= select_tag :intermediate_attestation_id, options_for_select(@intermediate_attestations.map{ |ia| [ia.name, ia.id] }), class: "form-select" %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= label_tag :record_book_id, "Студент", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= select_tag :record_book_id, options_for_select(@record_books.map{ |rb| [rb.user.name, rb.id] }), class: "form-select" %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <div class="col-sm-10 offset-sm-2">
      <%= submit_tag "Сгенерировать PDF", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
