<!-- app/views/retakes/index.html.erb -->
<h1>Retakes</h1>
<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Student</th>
      <th>Date</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @retakes.each do |retake| %>
      <tr>
        <td><%= retake.subject.name %></td>
        <td><%= retake.student.user_id %></td>
        <td><%= retake.date %></td>
        <td><%= retake.grade.grade if retake.grade %></td>
        <td><%= link_to 'Show', retake %></td>
        <td><%= link_to 'Edit', edit_retake_path(retake) %></td>
        <td><%= button_to 'Destroy', retake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Retake', new_retake_path %>
