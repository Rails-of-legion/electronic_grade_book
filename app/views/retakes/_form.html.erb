<%= form_for @retake, html: { class: 'needs-validation', novalidate: true } do |f| %>
  <% if @retake.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@retake.errors.count, 'error') %> prohibited this retake from being saved:</h4>
      <ul>
        <% @retake.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :subject_id %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, {}, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :student_id %>
    <%= f.collection_select :student_id, Student.all, :id, :user_id, {}, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :grade_id %>
    <%= f.collection_select :grade_id, Grade.all, :id, :grade, {}, { class: 'form-control' } %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
