<%= form_with(model: student, local: true) do |form| %>
    <div class="form-group"> 
      <%= form.label :user_id, "Пользователь" %>
      <%= form.collection_select :user_id, User.all, :id, :name, {}, { class: 'form-control' } %> 
    </div>
  
    <div class="form-group">
      <%= form.label :specialization_id, "Специальность" %>
      <%= form.collection_select :specialization_id, Specialization.all, :id, :name, {}, { class: 'form-control' } %> 
    </div>
  
    <div class="form-group"> 
      <%= form.label :group_id, "Группа" %>
      <%= form.collection_select :group_id, Group.all, :id, :name, {}, { class: 'form-control' } %> 
    </div>
  
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
  <% end %>