<div class="container">
  <h1 class="display-4 text-center mb-4"><%= t('home.title') %></h1>
  <p class="lead text-center"><%= t('home.description') %></p>

  <% if user_signed_in? %>
    <div class="text-center mt-4">
      <h3><%= t('home.welcome') %> <%= current_user.name %>,</h3> 
      <h4><%= t('home.email') %> <%= current_user.email %>,</h4>
      <h4><%= t('home.role') %> <%= user_role_translation(current_user) %></h4>
      <%= button_to t('home.sign_out'), destroy_user_session_path, method: :delete, class: 'btn btn-danger mt-3' %>
    </div>
  <% else %>
    <div class="text-center mt-4">
      <%= link_to t('home.sign_in'), new_user_session_path, class: 'btn btn-primary me-2' %>
      <%= link_to t('home.sign_up'), users_search_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
