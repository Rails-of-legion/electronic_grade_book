<h1 class="text-center mb-4"><%= t('extends_reports.generate_a_report_on_retaking_the_certification') %></h1>

<%= form_with url: generate_report_attestation_retake_reports_path(format: :pdf), method: :post, local: true, class: "container", data: {controller: 'reports'} do |form| %>
  <%= hidden_field_tag(:_method, :get) %> <!-- Это скрытое поле для отправки GET запроса -->

  <div class="form-group row mb-3">
    <%= form.label :exam_id, t('extends_reports.select_certification'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.collection_select :exam_id, @attestations, :id, :name, { prompt: t('extends_reports.select_certification') }, class: "form-select" %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :group_id, t('extends_reports.select_a_group'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.collection_select :group_id, @groups, :id, :name, { prompt: t('extends_reports.select_a_group')}, class: "form-select" %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <div class="col-sm-10 offset-sm-2">
      <%= form.submit 'Сформировать отчет', class: "btn btn-primary" %>
      <%= link_to t('common.back'), extends_reports_index_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
