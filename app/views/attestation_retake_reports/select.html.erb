<h1>Сформировать отчет по пересдаче аттестации</h1>

<%= form_with url: generate_report_attestation_retake_reports_path(format: :pdf), method: :post, local: true, class: "mt-5" do |form| %>
  <%= hidden_field_tag(:_method, :get) %> <!-- Это скрытое поле для отправки GET запроса -->
  <div class="form-group">
    <%= form.label :exam_id, 'Выберите аттестацию' %>
    <%= form.collection_select :exam_id, @attestations, :id, :name, { prompt: 'Выберите аттестацию' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :group_id, 'Выберите группу' %>
    <%= form.collection_select :group_id, @groups, :id, :name, { prompt: 'Выберите группу' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit 'Сформировать отчет', class: "btn btn-primary" %>
  </div>
<% end %>
