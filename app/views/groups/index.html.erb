<div class="container">
  <h1 class="text-center mb-4">List of Groups</h1>

  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Curator</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><% if group.curator %> <%= group.curator.name %> <% else %> Unassigned <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

