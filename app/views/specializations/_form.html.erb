<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <%= form_with model: @specialization, data: { turbo: false } do |f| %>
        <%= render 'shared/errors', object: @specialization %>

        <div class="form-group row mb-3">
          <div class="col-sm-3 text-right">
            <%= f.label :name, class: "col-form-label" do %>
              <div><%= t('specializations.name') %>:</div>
            <% end %>
          </div>

          <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group row mb-3">
          <div class="col-sm-3 text-right">
            <%= f.label :subject_ids, class: "col-form-label" do %>
              <div><%= t('specializations.subjects') %>:</div>
            <% end %>
          </div>
          <div class="col-sm-9">
            <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
              <table class="table table-sm table-bordered">
                <tbody>
                  <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name, { prompt: "Выберите предметы" }, { class: "form-check" } do |b| %>
                    <tr>
                      <td class="form-check d-flex align-items-center ml-5">
                          <%= b.check_box %> 
                          <label class="form-check-label" for="<%= b.object.id %>" style="margin-left: 10px;"> <%= b.text %></label> 
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="form-group row">
         <div class="col-sm-9 offset-sm-3 d-flex justify-content-between">
           <div>
              <%= f.submit (@specialization.new_record? ? t('specializations.create_specialization') : t('specializations.edit_specialization') ), class: "btn btn-primary mr-2" %>
           </div>
           <div>
              <%= link_to t('common.back'), specializations_path, class: "btn btn-secondary" %>
           </div>
         </div>
       </div>
      <% end %>
    </div>
  </div>
</div>
