<div class="container">
  <h1 class="text-center mb-4">Intermediate Attestation Details</h1>
  
  <div class="card">
    <div class="card-body">
      <p><strong>Name:</strong> <%= @intermediate_attestation.name %></p>
      <p><strong>Date:</strong> <%= @intermediate_attestation.date %></p>
      <p><strong>Assessment Type:</strong> <%= @intermediate_attestation.assessment_type %></p>
      <p><strong>Subject:</strong> <%= @intermediate_attestation.subject.try(:name) || 'N/A' %></p>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Edit", edit_intermediate_attestation_path(@intermediate_attestation), class: "btn btn-primary mr-2" %>
    <%= link_to "Back", intermediate_attestations_path, class: "btn btn-secondary mr-2" %>
    <%= link_to "Download PDF", intermediate_attestation_path(@intermediate_attestation, format: "pdf"), class: 'btn btn-primary' %>
  </div>
</div>
