<%= form_with(model: @intermediate_attestation, local: true) do |form| %>
  <% if @intermediate_attestation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@intermediate_attestation.errors.count, "error") %> prohibited this intermediate attestation from being saved:</h2>

      <ul>
        <% @intermediate_attestation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :assessment_type %>
    <%= form.text_field :assessment_type %>
  </div>

  <div class="field">
    <%= form.label :max_grade %>
    <%= form.number_field :max_grade %>
  </div>

  <div class="field">
    <%= form.label :subject_id %>
    <%= form.collection_select :subject_id, @subjects, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
