<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with(model: @intermediate_attestation, local: true) do |form| %>
            <%= render 'shared/errors', object: @intermediate_attestation %>

            <div class="form-group row mb-3">
              <div class="col-sm-3 text-right">
                <%= form.label :name, class: "col-form-label" do %>
                  <div><%= t('intermediate_attestations.name') %>:</div>
                <% end %>
              </div>
              <div class="col-sm-9">
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-sm-3 text-right">
                <%= form.label :date, class: "col-form-label" do %>
                  <div><%= t('intermediate_attestations.date') %>:</div>
                <% end %>
              </div>
              <div class="col-sm-9">
                <%= form.date_field :date, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-sm-3 text-right">
                <%= form.label :assessment_type, class: "col-form-label" do %>
                  <div><%= t('intermediate_attestations.assessment_type') %>:</div>
                <% end %>
              </div>
              <div class="col-sm-9">
                <%= form.text_field :assessment_type, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-sm-3 text-right">
                <%= form.label :subject_id, class: "col-form-label" do %>
                  <div><%= t('intermediate_attestations.subject') %>:</div>
                <% end %>
              </div>
              <div class="col-sm-9">
                <%= form.collection_select :subject_id, @subjects, :id, :name, { prompt: t('intermediate_attestations.select_subject') }, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-sm-3 text-right">
                <%= form.label :group_ids, class: "col-form-label" do %>
                  <div><%= t('intermediate_attestations.groups') %>:</div>
                <% end %>
              </div>
              <div class="col-sm-9">
                <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
                  <table class="table table-sm table-bordered">
                    <tbody>
                      <%= form.collection_check_boxes :group_ids, @groups, :id, :name, { prompt: t('intermediate_attestations.select_groups') }, { class: "form-check" } do |b| %>
                        <tr>
                          <td class="form-check d-flex align-items-center ml-5">
                            <%= b.check_box %>
                            <label class="form-check-label" for="<%= b.object.id %>" style="margin-left: 10px;"> <%= b.text %></label> 
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-sm-3 text-right">
                <%= form.label :teacher_id, class: "col-form-label" do %>
                  <div><%= t('intermediate_attestations.teacher') %>:</div>
                <% end %>
              </div>
              <div class="col-sm-9">
                <%= form.collection_select :teacher_id, @teachers, :id, :name, { prompt: t('intermediate_attestations.select_teacher') }, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-9 offset-sm-3 d-flex justify-content-between">
                <div>
                  <%= form.submit t('common.add'), class: "btn btn-primary mr-2" %>
                </div>
                <div>
                  <%= link_to t('common.back'), intermediate_attestations_path, class: "btn btn-secondary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
