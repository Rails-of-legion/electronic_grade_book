<% if @subjects.present? %>
  <div class="container mt-5">
    <h1 class="mb-4">Subjects</h1>
    
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td>
              <%= link_to 'Show', subject, class: 'btn btn-sm btn-info' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="container mt-5">
    <div class="alert alert-warning" role="alert">
      No subjects found.
    </div>
  </div>
<% end %>
