<% if @subjects.present? %>
  <div class="container mt-5">
    <h1 class="mb-4">Subjects</h1>
    
    <div class="row mb-3">
    <div class="col-md-4">
      <%= form_tag subjects_path, method: :get do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], placeholder: "Поиск по названию или описанию", class: "form-control" %>
          <div class="input-group-append" style="margin-left: 10px;">
            <%= button_tag type: "search", class: "btn btn-primary", style: "width: 3cm; height: 38px;" do %>
              Search
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td>
              <%= link_to 'Show', subject, class: 'btn btn-sm btn-info' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
  <div class="container mt-5">
    <div class="alert alert-warning" role="alert">
      No subjects found.
    </div>
  </div>
<% end %>
