<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mt-5">Create Subject</h1>
      <%= simple_form_for @subject, :html => { :class => 'form-horizontal' } do |f| %>
       <%= f.input :name, label: 'Name', required: true, input_html: { class: 'form-control' } %>
       <%= f.input :description, label: 'Description', as: :text, input_html: { class: 'form-control' } %> 
       <%= f.button :submit, 'Create Subject', class: 'btn btn-primary mt-3 mb-3' %>
      <% end %>
      <%= link_to 'Back', subjects_path, class: 'btn btn-secondary mt-3 mb-3' %>
    </div>
  </div>
</div>
