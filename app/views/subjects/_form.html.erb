<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @subject, local: true  do |f| %> 
        

        <div class="form-group row mb-3">
          <div class="col-sm-3 text-right">
            <%= f.label :name, class: "col-form-label" do %>
              <div><%= t('subjects.name') %>:</div> 
            <% end %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <div class="col-sm-3 text-right">
            <%= f.label :description, class: "col-form-label" do %>
              <div><%= t('subjects.description') %>:</div> 
            <% end %>
          </div>
          <div class="col-sm-9">
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3 d-flex justify-content-end">
            <%= f.submit (@subject.new_record? ? t('subjects.create_subject') : t('subjects.edit_subject')), class: "btn btn-primary mr-2" %> 
            <%= link_to t('common.back'), subjects_path, class: "btn btn-secondary" %> 
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>