<div class="container mt-5">
  <h1><%= t 'subjects.subject' %>: <%= @subject.name %></h1>

  <p>
    <strong><%= t 'subjects.description' %>:</strong>
    <%= @subject.description %>
  </p>

  <div class="btn-group" role="group">
    <%= link_to t('subjects.back'), subjects_path, class: 'btn btn-secondary' %>
    <% if can? :edit, @subject %> 
      <%= link_to t('subjects.edit'), edit_subject_path(@subject), class: 'btn btn-primary' %>
    <% end %>
    <% if can? :destroy, @subject %> 
    <%= button_to t('subjects.delete'), subject_path(@subject), method: :delete, data: { confirm: t('subjects.are_you_sure') }, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
