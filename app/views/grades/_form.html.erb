<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for grade, html: { class: 'form-horizontal' } do |f| %>
            <%= f.association :subject, label: 'Subject', required: true, wrapper: :horizontal_form, input_html: { class: 'form-control' } %>
            <%= f.input :grade, label: 'Grade', required: true, wrapper: :horizontal_form, input_html: { class: 'form-control' } %>
            <div class="text-center">
              <%= f.button :submit, class: 'btn btn-primary mr-3' %>
              <%= link_to 'Back', grades_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
