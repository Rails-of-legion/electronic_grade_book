<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for grade, html: { class: 'form-horizontal' } do |f| %>
            <%= f.input :grade, label: t('grades.grade'), required: true, wrapper: :horizontal_form, input_html: { class: 'form-control' } %>
            <%= f.input :date, as: :string, label: t('grades.date'), required: true, wrapper: :horizontal_form, input_html: { class: 'form-control datepicker' } %>
            <%= f.input :subject_id, collection: Subject.all, label: t('grades.subject'), required: true, wrapper: :horizontal_form, input_html: { class: 'form-control' } %>
            <div class="text-center">
              <%= f.button :submit, class: 'btn btn-primary mr-3' %>
              <%= link_to t('common.back'), grades_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('.datepicker').datepicker(); // Инициализация datepicker
</script>